  <script>
    // JavaScript for continuous infinite auto-scroll and manual scroll buttons
    const slider = document.getElementById('slider');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const sliderItems = slider.children; // All the slider cards

    // Continuous auto-scroll functionality for large screens
    function autoScroll() {
      // Scroll by one card width
      slider.scrollBy({
        left: slider.offsetWidth, // Adjust based on the card width
        behavior: 'smooth',
      });

      // Check if we are at the end of the slider and reset to the first item only if the scroll is at the end
      if (slider.scrollLeft + slider.offsetWidth >= slider.scrollWidth) {
        slider.scrollLeft = 0;
      }
    }

    if (window.innerWidth > 768) {
      // Start auto-scrolling
      setInterval(autoScroll, 3000); // Scroll every 3 seconds
    }

    // Manual scroll functionality for prev and next buttons
    prevBtn.addEventListener('click', () => {
      slider.scrollBy({
        left: -slider.offsetWidth, // Scroll one card width to the left
        behavior: 'smooth',
      });

      // Check if we are at the beginning of the slider and reset to the last card only if needed
      if (slider.scrollLeft <= 0) {
        slider.scrollLeft = slider.scrollWidth - slider.offsetWidth;
      }
    });

    nextBtn.addEventListener('click', () => {
      slider.scrollBy({
        left: slider.offsetWidth, // Scroll one card width to the right
        behavior: 'smooth',
      });

      // Check if we are at the end of the slider and reset to the first card only if needed
      if (slider.scrollLeft + slider.offsetWidth >= slider.scrollWidth) {
        slider.scrollLeft = 0;
      }
    });

    // For mobile screens, hide manual buttons and enable infinite auto-scroll continuously
    if (window.innerWidth <= 768) {
      prevBtn.style.display = 'none';
      nextBtn.style.display = 'none';

      // Start infinite auto-scrolling
      setInterval(autoScroll, 3000); // Auto scroll every 3 seconds
    }
  </script>